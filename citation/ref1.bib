@article{muraliGrabMyTail2018,
  title = {Grab My Tail: Evolution of Dazzle Stripes and Colourful Tails in Lizards},
  shorttitle = {Grab My Tail},
  author = {Murali, Gopal and Merilaita, Sami and Kodandaramaiah, Ullasa},
  year = {2018},
  journal = {Journal of Evolutionary Biology},
  volume = {31},
