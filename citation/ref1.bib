
@article{backwellDishonestSignallingFiddler2000a,
  title = {Dishonest Signalling in a Fiddler Crab},
  author = {Backwell, Patricia R. Y. and Christy, John H. and Telford, Steven R. and Jennions, Michael D. and Passmore, Jennions},
  year = {2000},
  month = apr,
  journal = {Proceedings of the Royal Society of London. Series B: Biological Sciences},
  volume = {267},
  number = {1444},
  pages = {719--724},
  publisher = {{Royal Society}},
  doi = {10.1098/rspb.2000.1062},
  abstract = {Animal communication theory predicts that low\textendash frequency cheating should be common in generally honest signalling systems. However, perhaps because cheats are designed to go undetected, there are few examples of dishonest signals in natural populations. Here we present what we believe is the first example of a dishonest signal which is used commonly by males to attract mates and fight sexual rivals. After losing their large claw, male fiddler crabs (Uca annulipes) grow a new one which has less mass, is a less effective weapon and costs less to use in signalling than an equivalent\textendash length claw of the original form. Males with original claws do not differentially fight males with regenerated claws even though they are likely to win. Regenerated claws effectively bluff fighting ability and deter potential opponents before they fight. During mate searching, females do not discriminate against males with low\textendash mass, regenerated claws, indicating that they are deceived as to the true costs males pay to produce sexual signals. Up to 44\% of males in natural populations have regenerated claws, a level unanticipated by current signalling theory. The apparent rarity of cheating may be an artefact of the usual difficulty of detecting cheats and dishonesty may be quite common.},
  keywords = {cheating,dishonesty,signalling},
  file = {C\:\\Users\\diogo\\Zotero\\storage\\3PYP85WN\\Backwell et al. - 2000 - Dishonest signalling in a fiddler crab.pdf}
}

@article{barnardBlueStreakDynamic2012,
  title = {The Blue Streak: A Dynamic Trait in the Mud Fiddler Crab,~{{Uca}} Pugnax},
  shorttitle = {The Blue Streak},
  author = {Barnard, Mollie E. and {Strandburg-Peshkin}, Ariana and Yarett, Ian R. and Merz, Rachel A.},
